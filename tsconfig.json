{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    // set to false if your library is only TypeScript
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@stylesGlobal/*": ["./src/stylesGlobal/*"],
      "@images/*": ["./src/@images/*"],
      "@utils/*": ["./src/@utils/*"],
    }
  },
  "include": ["custom.d.ts", "**/*"],
  "exclude": ["node_modules", "*.js"]
}
