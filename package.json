    "ajv": "^8.12.0",
    "classnames": "^2.3.2",
    "connectkit": "^1.5.3",
    "cpx": "^1.5.0",
    "css-loader": "^6.7.3",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "https-browserify": "^1.0.0",
